{
  "name": "delivery",
  "description": "A secure, fast and easy-to-use file sharing tool",
  "license": "MIT",
  "private": false,
  "version": "0.0.1",
  "author": "SkayZhang",
  "main": "dist/basic/app.js",
  "scripts": {
    "app:dev": "vite",
    "app:build": "vite build && electron-builder"
  },
  "engines": {
    "node": ">=16.16.0"
  },
  "devDependencies": {
    "unplugin-vue-components": "^0.21.2",
    "@element-plus/icons-vue": "^2.0.6",
    "unplugin-auto-import": "^0.10.2",
    "vite-plugin-electron": "^0.8.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "electron-builder": "^23.1.0",
    "element-plus": "^2.2.11",
    "concurrently": "^7.3.0",
    "vue-router": "^4.1.3",
    "electron": "^19.0.9",
    "vite": "^2.9.13",
    "vue": "^3.2.37"
  },
  "env": {
    "VITE_DEV_SERVER_HOST": "127.0.0.1",
    "VITE_DEV_SERVER_PORT": 5671
  },
  "build": {
    "productName": "Delivery",
    "appId": "cc.stacks.delivery",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
